@model IEnumerable<electronic_store.Models.Cliente>

@{
    ViewBag.Title = "Customer Control";
}

<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Customer Control</h1>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Customer Information</h2>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <a class="btn btn-success btn-sm" style="font-size:12px;" href="~/Clientes/Create">Create New Customer</a>
            <br />
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Cédula
                    </th>
                    <th>
                        Nombre Completo
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Dirección
                    </th>
                    <th>
                        Telefono
                    </th>
                    <th>
                        Create At
                    </th>
                    <th>
                        Update At
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Active)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IDUser)
                        </th>*@
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DNI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreApellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaActualizado)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDUser)
                        </td>*@
                    <td class="btn btn-group text-center">
                        <a class="btn btn-info btn-xs" style="font-size:11px;" href="~/Clientes/Details/@item.IDCliente">View</a>
                        <a class="btn btn-warning btn-xs" style="font-size:11px;" href="~/Clientes/Edit/@item.IDCliente">Edit</a>
                        <a class="btn btn-danger btn-xs" style="font-size:11px;" href="~/Clientes/Delete/@item.IDCliente">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}