@model IEnumerable<electronic_store.Models.Factura>
@{
    ViewBag.Title = "Existing Invoice";
}
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">My Invoices</h1>
    </div>
</div>
@{
    string user = User.Identity.Name;
}
<br />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Invoice Information - @user</h2>
    </div>
    <div class="panel-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="info">
                    <th style="text-align:center;">
                        #
                    </th>
                    <th style="width:15px;text-align:center;">N° Invoice</th>
                    <th>
                        Invoice Date
                    </th>
                    <th>
                        Total
                    </th>
                    <th style="text-align:center;">Actions</th>
                </tr>
            </thead>
            @{
                int aux = 0;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center;">
                        @(aux = aux + 1)
                    </td>
                    <td style="width:15px;text-align:center;">@Html.DisplayFor(modelItem => item.IDFactura)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreado)
                    </td>
                    <td>
                        @string.Format("{0:C}", (item.TotalFactura))
                    </td>
                    <td class="btn-group-xs text-center">
                        <a class="btn btn-info btn-xs" href="~/Facturas/viewDatailsInvoice/@item.IDFactura"><span class="glyphicon glyphicon-eye-open"></span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}