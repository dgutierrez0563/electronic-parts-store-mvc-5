@model IEnumerable<electronic_store.Models.Atributo>

@{
    ViewBag.Title = "Attribute Control";
}

<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Attribute Control</h1>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Attribute Information</h2>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <a class="btn btn-success btn-sm" style="font-size:12px;" href="~/Atributoes/Create">Create New Attribute</a>
            <br />
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Product Name
                    </th>
                    <th>
                        Attribute Name
                    </th>
                    <th>
                        Detail
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Productos.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detalle)
                    </td>
                    <td class="btn btn-group text-center">
                        <a class="btn btn-info btn-xs" style="font-size:11px;" href="~/Atributoes/Details/@item.IDAtributo">View</a>
                        <a class="btn btn-warning btn-xs" style="font-size:11px;" href="~/Atributoes/Edit/@item.IDAtributo">Edit</a>
                        <a class="btn btn-danger btn-xs" style="font-size:11px;" href="~/Atributoes/Delete/@item.IDAtributo">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
