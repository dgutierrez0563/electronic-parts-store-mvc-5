
@model IEnumerable<electronic_store.Models.Producto>
@{
    ViewBag.Title = "All Collections";
}

<br />
<br />
@using (Html.BeginForm())
{
    <div class="panel panel-primary">
        <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
            <h1 class="panel-title text-center" style="font-size:20px;">All Collections</h1>
        </div>
    </div>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-2">
                <div class="breadcrumb">
                    <h4 class="my-4">Categories</h4>
                </div>
                <div class="list-group">
                    <a href="~/Productoes/viewAllCollections" class="list-group-item">All Collections</a>
                    <a href="~/Consultas/Accesorios" class="list-group-item">Accessories</a>
                    <a href="~/Consultas/Case" class="list-group-item">Case</a>
                    <a href="~/Consultas/TarjetaVideo" class="list-group-item">Grafics Card</a>
                    <a href="~/Consultas/Monitor" class="list-group-item">Monitor</a>
                    <a href="~/Consultas/TarjetaMadre" class="list-group-item">Motherboard</a>
                    <a href="~/Consultas/Perifericos" class="list-group-item">Peripherals</a>
                    <a href="~/Consultas/FuentePoder" class="list-group-item">Power Supply</a>
                    <a href="~/Consultas/Procesador" class="list-group-item">Processor</a>
                    <a href="~/Consultas/Ram" class="list-group-item">RAM</a>
                    <a href="~/Consultas/DiscoDuro" class="list-group-item">Storage</a>
                </div>
            </div>
            <!-- /.col-lg-3 -->
            <div class="col-lg-9">
                <div id="myCarousel" class="carousel slide">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="9"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="10"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="11"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="12"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="13"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="14"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="active item">
                            <img src="~/Content/Images/almacenamiento.jpg" alt="banner1">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/cases.jpg" alt="banner2">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/gaming.jpg" alt="banner3">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/memoria-ram.jpg" alt="banner4">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/monitores.jpg" alt="banner5">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/procesadores-amd.jpg" alt="banner6">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/procesadores-intel.jpg" alt="banner7">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/procesadores.jpg" alt="banner8">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/tarjeta-madre.jpg" alt="banner9">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/tarjetas-de-video.jpg" alt="banner10">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/enfriamiento-liquido.jpg" alt="banner11">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/headset.jpg" alt="banner12">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/teclados.jpg" alt="banner13">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/ventiladores.jpg" alt="banner14">
                        </div>
                        <div class="item">
                            <img src="~/Content/Images/sillas-gamer.jpg" alt="banner15">
                        </div>
                    </div>

                    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>

                </div>
                <br />
                <div class="progress progress-striped active">
                    <div class="progress-bar" style="width: 100%"></div>
                </div>

                <div class="row">
                    <br />
                    <div class="form-group">
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Product Name" name="productName">
                                <span class="input-group-btn">
                                    <button type="submit" value="Search" class="btn btn-success"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Category Name" name="categoryName">
                                <span class="input-group-btn">
                                    <button type="submit" value="Search" class="btn btn-success"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div>
                                <input type="text" class="form-control" placeholder="Price Initial" name="priceInitial">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Price Final" name="priceFinal">
                                <span class="input-group-btn">
                                    <button type="submit" value="Search" class="btn btn-success"><span class="glyphicon glyphicon-search"></span></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    @foreach (var item in Model)
                {
                        <div class="col-lg-4 col-md-6 mb-5">
                            <div class="card h-100">
                                <a href="#"><img class="card-img-top" src="http://placehold.it/150x100" alt=""></a>
                                <div class="card-body">
                                    <h5 class="text-danger">
                                        <a href="~/Consultas/DetailsProduct/@item.IDProducto">@item.Nombre</a>
                                    </h5>
                                    <h6>@string.Format("{0:C}", @item.Precio)</h6>
                                    <h7>In Stock @item.Stock</h7><br />
                                    @*<a class="btn btn-default" href="~/ShopCars/AddToCar/@item.IDProducto"><span class="glyphicon-glyphicon-shopping-cart" style="font-size:14px; color:yellow;"></span></a>*@
                                    <a  type="button" href="~/ShopCars/AddToCar/@item.IDProducto"><spam class="glyphicon glyphicon-shopping-cart" style="color:orange;font-size:18px;"></spam></a>
                                    @*<a type="button" href="~/Wishlists/CreateAt/@item.IDProducto"><span class="glyphicon-glyphicon-heart" style="font-size:18px; color:red;"></span></a>*@
                                    <a type="button" href="~/Wishlists/viewWishlist"><spam class="glyphicon glyphicon-heart" style="color:red; font-size:18px;"></spam></a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                </div>
                            </div>
                            <br />
                            <br />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

