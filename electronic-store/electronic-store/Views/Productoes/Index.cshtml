@model IEnumerable<electronic_store.Models.Producto>

@{
    ViewBag.Title = "Product Control";
}

<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Product Control</h1>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Product Information</h2>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <a class="btn btn-success btn-sm" style="font-size:12px;" href="~/Productoes/Create">Create New Product</a>
            <br />
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Product Name
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Supplier
                    </th>
                    <th>
                        Unit Price
                    </th>
                    <th>
                        Stock
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categorias.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedors.Nombre)
                    </td>
                    <td>
                        $ @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td class="btn btn-group text-center">
                        <a class="btn btn-info btn-xs" style="font-size:11px;" href="~/Productoes/Details/@item.IDProducto">View</a>
                        <a class="btn btn-warning btn-xs" style="font-size:11px;" href="~/Productoes/Edit/@item.IDProducto">Edit</a>
                        <a class="btn btn-danger btn-xs" style="font-size:11px;" href="~/Productoes/Delete/@item.IDProducto">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}