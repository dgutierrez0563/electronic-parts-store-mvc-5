@model electronic_store.Models.Producto

@{
    ViewBag.Title = "Product Datails";
}
<div class="nav navbar-default">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;color:white">Product Datails</h1>
    </div>
</div>
<br />
<div class="form-horizontal panel panel-primary">
    <fieldset>
        <div class="nav navbar-default">
            <div class="panel-heading">
                <h3 class="panel-title">Information of @Html.DisplayFor(model => model.Nombre)</h3>
            </div>
        </div>
        <br />
        <div class="panel-body">
            <dl class="dl-horizontal table-hover">
                <dt>
                    Product Name:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt>
                    Category Type:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Categorias.Nombre)
                </dd>

                <dt>
                    Supplier Name:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Proveedors.Nombre)
                </dd>

                @*<dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>*@

                <dt>
                    Unit Price:
                </dt>

                <dd>
                    $ @Html.DisplayFor(model => model.Precio)
                </dd>

                <dt>
                    Stock:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Stock)
                </dd>

                <dt>
                    Create At:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaCreado)
                </dd>

                <dt>
                    Update At:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaActualizado)
                </dd>
            </dl>
        </div>
    </fieldset>
</div>
<p>
    <a class="btn btn-primary btn-sm" style="font-size:13px;" href="~/Productoes/Index">Back To Index</a>
    <a class="btn btn-warning btn-sm" style="font-size:13px;" href="~/Productoes/Edit/@Model.IDProducto">Edit Information</a>
</p>
