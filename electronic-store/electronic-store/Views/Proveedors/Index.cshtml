@model IEnumerable<electronic_store.Models.Proveedor>

@{
    ViewBag.Title = "Supplier Control";
}

<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Supplier Control</h1>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Supplier Information</h2>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <a class="btn btn-success btn-sm" style="font-size:12px;" href="~/Proveedors/Create">Create New Supplier</a>
            <br />
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Supplier Name
                    </th>
                    <th>
                        Representative
                    </th>
                    <th>
                        E-Mail
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        Details
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.FechaCreado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaActualizado)
                        </th>*@
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Representante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detalle)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.FechaCreado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaActualizado)
                        </td>*@
                    <td class="btn btn-group text-center">
                        <a class="btn btn-info btn-xs" style="font-size:11px;" href="~/Proveedors/Details/@item.IDProveedor">View</a>
                        <a class="btn btn-warning btn-xs" style="font-size:11px;" href="~/Proveedors/Edit/@item.IDProveedor">Edit</a>
                        <a class="btn btn-danger btn-xs" style="font-size:11px;" href="~/Proveedors/Delete/@item.IDProveedor">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}