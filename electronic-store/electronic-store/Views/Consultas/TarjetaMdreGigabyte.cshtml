
@model IEnumerable<electronic_store.DataModel.viewTarjetaMadreGigabyte_Result>
@{
    ViewBag.Title = "Motherboards";
}
<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Motherboards</h1>
    </div>
</div>
<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-2">
            <div class="breadcrumb">
                <h4 class="my-4">Categories</h4>
            </div>
            <div class="list-group">
                <a href="~/Home/Index" class="list-group-item">HOME</a>
                <div><h5 style="font-weight:bold;text-align:center;">Motherboards Brand</h5></div>
                <a href="~/Consultas/TarjetaMdreAsus" class="list-group-item">Asus</a>
                <a href="~/Consultas/TarjetaMdreGigabyte" class="list-group-item">Gigabyte</a>
                <a href="~/Consultas/TarjetaMdreMSI" class="list-group-item">MSI</a>
                <div><h5 style="font-weight:bold;text-align:center;">Motherboards Architecture</h5></div>
                <a href="~/Consultas/TarjetaMdreAMD" class="list-group-item">AMD</a>
                <a href="~/Consultas/TarjetaMdreIntel" class="list-group-item">Intel</a>
            </div>
        </div>
        <!-- /.col-lg-2 -->
        <div class="col-lg-9">
            <div id="myCarousel" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="9"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="10"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="11"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="12"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="13"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="14"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="active item">
                        <img src="~/Content/Images/almacenamiento.jpg" alt="banner1">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/cases.jpg" alt="banner2">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/gaming.jpg" alt="banner3">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/memoria-ram.jpg" alt="banner4">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/monitores.jpg" alt="banner5">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/procesadores-amd.jpg" alt="banner6">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/procesadores-intel.jpg" alt="banner7">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/procesadores.jpg" alt="banner8">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/tarjeta-madre.jpg" alt="banner9">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/tarjetas-de-video.jpg" alt="banner10">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/enfriamiento-liquido.jpg" alt="banner11">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/headset.jpg" alt="banner12">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/teclados.jpg" alt="banner13">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/ventiladores.jpg" alt="banner14">
                    </div>
                    <div class="item">
                        <img src="~/Content/Images/sillas-gamer.jpg" alt="banner15">
                    </div>
                </div>
                <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
            </div>
            <br />
            <div class="progress progress-striped active">
                <div class="progress-bar" style="width: 100%"></div>
            </div>
            <br />

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-5">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="http://placehold.it/150x100" alt=""></a>
                            <div class="card-body">
                                <h5 class="text-danger">
                                    <a href="~/Consultas/DetailsProduct/@item.IDProducto">@item.Nombre</a>
                                </h5>
                                <h6>@string.Format("{0:C}", @item.Precio)</h6>
                                <h7>In Stock @item.Stock</h7><br />
                                <a class="btn btn-warning btn-xs" href="~/ShopCars/AddToCar/@item.IDProducto"><span class="glyphicon glyphicon-plus"></span> To Car</a>
                                <a class="btn btn-info btn-xs" href="~/Wishlists/CreateAt/@item.IDProducto"><span class="glyphicon glyphicon-plus"></span>Add Wish</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>

