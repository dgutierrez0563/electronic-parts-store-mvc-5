
@model IEnumerable<electronic_store.DataModel.viewDetailsProductos_Result>
@{
    ViewBag.Title = "Accesorios";
}

<br />
<br />
<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Product Details</h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-2">
        <div class="breadcrumb">
            <h4 class="my-4">Categories</h4>
        </div>
        <div class="list-group">
            <a href="~/Productoes/viewAllCollections" class="list-group-item">All Collections</a>
            <a href="~/Consultas/Accesorios" class="list-group-item">Accessories</a>
            <a href="~/Consultas/Case" class="list-group-item">Case</a>
            <a href="~/Consultas/TarjetaVideo" class="list-group-item">Grafics Card</a>
            <a href="~/Consultas/Monitor" class="list-group-item">Monitor</a>
            <a href="~/Consultas/TarjetaMadre" class="list-group-item">Motherboard</a>
            <a href="~/Consultas/Perifericos" class="list-group-item">Peripherals</a>
            <a href="~/Consultas/FuentePoder" class="list-group-item">Power Supply</a>
            <a href="~/Consultas/Procesador" class="list-group-item">Processor</a>
            <a href="~/Consultas/Ram" class="list-group-item">RAM</a>
            <a href="~/Consultas/DiscoDuro" class="list-group-item">Storage</a>
        </div>
    </div>
    <!-- /.col-lg-3 -->
    <div class="col-lg-9">
        <div id="myCarousel" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="8"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="9"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="10"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="11"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="12"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="13"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="14"></li>
            </ol>
            <div class="carousel-inner">
                <div class="active item">
                    <img src="~/Content/Images/almacenamiento.jpg" alt="banner1">
                </div>
                <div class="item">
                    <img src="~/Content/Images/cases.jpg" alt="banner2">
                </div>
                <div class="item">
                    <img src="~/Content/Images/gaming.jpg" alt="banner3">
                </div>
                <div class="item">
                    <img src="~/Content/Images/memoria-ram.jpg" alt="banner4">
                </div>
                <div class="item">
                    <img src="~/Content/Images/monitores.jpg" alt="banner5">
                </div>
                <div class="item">
                    <img src="~/Content/Images/procesadores-amd.jpg" alt="banner6">
                </div>
                <div class="item">
                    <img src="~/Content/Images/procesadores-intel.jpg" alt="banner7">
                </div>
                <div class="item">
                    <img src="~/Content/Images/procesadores.jpg" alt="banner8">
                </div>
                <div class="item">
                    <img src="~/Content/Images/tarjeta-madre.jpg" alt="banner9">
                </div>
                <div class="item">
                    <img src="~/Content/Images/tarjetas-de-video.jpg" alt="banner10">
                </div>
                <div class="item">
                    <img src="~/Content/Images/enfriamiento-liquido.jpg" alt="banner11">
                </div>
                <div class="item">
                    <img src="~/Content/Images/headset.jpg" alt="banner12">
                </div>
                <div class="item">
                    <img src="~/Content/Images/teclados.jpg" alt="banner13">
                </div>
                <div class="item">
                    <img src="~/Content/Images/ventiladores.jpg" alt="banner14">
                </div>
                <div class="item">
                    <img src="~/Content/Images/sillas-gamer.jpg" alt="banner15">
                </div>
            </div>

            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>

        </div>
        <br />
        <div class="progress progress-striped active">
            <div class="progress-bar" style="width: 100%"></div>
        </div>
        <br />

        <div class="row">
            <div class="card mt-4">
                <img class="card-img-top img-fluid" src="http://placehold.it/870x400" alt="">
                <div class="card-body">
                    <br />
                    <br />
                    @{
                        string name = "";
                        double precio = 0;
                    }
                    <table class="table table-bordered table-hover">
                        <tr class="info text-center">
                            <th colspan="4">Product Details</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td style="display:none;">@(name = item.NombreProducto)</td>
                                    <td style="display:none;">@(precio = item.Precio)</td>
                                    <td>@item.NombreAtributo</td>
                                    <td>@item.Detalle</td>
                                </tr>
                            </tbody>
                        }
                        <thead>
                            <tr class="panel-title danger">
                                <th>Product Name: @name</th>
                                <th>Price: @string.Format("{0:C}", @precio) </th >
                            </tr >
                        </thead >
                    </table >
                    <br/>                    
                    <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
                </div>
            </div>
            <div class="card card-outline-secondary my-4">
                <div class="card-header">
                    Product Reviews
                </div>
                <div class="card-body">
                    <div class="panel-default">
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    <hr>
                    <a href="#" class="btn btn-success">Leave a Review</a>
                </div>
            </div>
        </div>
    </div>
</div>
