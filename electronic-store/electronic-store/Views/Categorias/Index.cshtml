@model IEnumerable<electronic_store.Models.Categoria>


@{
    ViewBag.Title = "Category Control";
}

<div class="panel panel-primary">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Category Control</h1>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Category Information</h2>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <a class="btn btn-success btn-sm" style="font-size:12px;" href="~/Categorias/Create">Create New Category</a>
            <br />
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Category Name
                    </th>
                    <th>
                        Details
                    </th>
                    <th>
                        Create At
                    </th>
                    <th>
                        Update At
                    </th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Detalle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaActualizado)
                    </td>
                    <td class="btn btn-group text-center">
                        <a class="btn btn-info btn-xs" style="font-size:11px;" href="~/Categorias/Details/@item.IDCategoria">View</a>
                        <a class="btn btn-warning btn-xs" style="font-size:11px;" href="~/Categorias/Edit/@item.IDCategoria">Edit</a>
                        <a class="btn btn-danger btn-xs" style="font-size:11px;" href="~/Categorias/Delete/@item.IDCategoria">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
